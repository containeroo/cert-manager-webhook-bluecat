{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependency"],
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "description": "Keep Kubernetes libraries aligned with cert-manager's tested dependency set",
      "matchManagers": ["gomod"],
      "enabled": false,
      "matchPackageNames": ["k8s.io/{/,}**"]
    }
  ]
}
